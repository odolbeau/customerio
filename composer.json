{
    "name": "shapin/customerio",
    "description": "PHP client for customer.io API",
    "license": "MIT",
    "keywords": ["api", "crm", "marketing", "customerio"],
    "authors": [
        {
            "name": "Olivier Dolbeaua",
            "email": "olivier@bbnt.me"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "symfony/config": "^4.4 || ^5.2",
        "symfony/http-client": "^4.4 || ^5.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "symfony/phpunit-bridge": "^4.4 || ^5.2",
        "symfony/var-dumper": "^4.4 || ^5.2"
    },
    "autoload": {
        "psr-4": {
            "Shapin\\CustomerIO\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Shapin\\CustomerIO\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-ci": "vendor/bin/phpunit --coverage-text --coverage-clover=build/coverage.xml"
    }
}
