{
    "name": "shapin/customerio",
    "description": "PHP client for customer.io API",
    "license": "MIT",
    "keywords": ["api", "crm", "marketing", "customerio"],
    "authors": [
        {
            "name": "Olivier Dolbeaua",
            "email": "olivier@bbnt.me"
        }
    ],
    "require": {
        "php": "^7.2",
        "php-http/httplug": "^1.1|^2.0",
        "php-http/multipart-stream-builder": "^1.0",
        "php-http/client-common": "^1.9|^2.0",
        "php-http/discovery": "^1.6",
        "symfony/config": "^4.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "php-http/message-factory": "^1.0",
        "php-http/guzzle6-adapter": "^1.1,>1.1.1|^2.0",
        "guzzlehttp/guzzle": "^6.3",
        "php-http/message": "^1.0",
        "guzzlehttp/psr7": "^1.3",
        "nyholm/nsa": "^1.0",
        "friendsofphp/php-cs-fixer": "^2.13",
        "phpstan/phpstan": "^0.11.1",
        "symfony/phpunit-bridge": "^4.2",
        "symfony/var-dumper": "^4.2"
    },
    "autoload": {
        "psr-4": {
            "Shapin\\CustomerIO\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Shapin\\CustomerIO\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-ci": "vendor/bin/phpunit --coverage-text --coverage-clover=build/coverage.xml"
    }
}
